{
  "unstable": [
    "kv"
  ],
  "tasks": {
    "dev": "vite",
    "build": "vite build",
    "preview": "deno serve -A _fresh/server.js",
    "tunnel": "deno run --tunnel --allow-env main.ts"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "*.md"
    ]
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "#/": "./",
    "@annervisser/slug": "jsr:@annervisser/slug@^1.2.1",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@std/assert": "jsr:@std/assert@^1.0.17",
    "@std/http/cookie": "jsr:@std/http@^1.0.24/cookie",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/text": "jsr:@std/text@^1.0.17",
    "@std/ulid": "jsr:@std/ulid@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.11",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.18",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "idb-keyval": "npm:idb-keyval@6.2.1",
    "open-props": "npm:open-props@^1.7.23",
    "posthog-js": "npm:posthog-js@^1.341.0",
    "posthog-node": "npm:posthog-node@^5.24.9",
    "preact": "npm:preact@^10.27.2",
    "preact/": "npm:/preact@^10.27.2/",
    "tailwind-merge": "npm:tailwind-merge@^3.4.0",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "vite": "npm:vite@^7.3.1",
    "zingtouch": "npm:zingtouch@^1.0.6"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "nodeModulesDir": "auto",
  "deploy": {
    "org": "kasperstorgaard",
    "app": "ricochet"
  }
}
